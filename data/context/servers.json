{
  "info": {
    "name": "Updated Collection",
    "description": "Updated description of the API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "console.log('This runs before each request');"
        ]
      }
    },
    {
      "listen": "prerequest",
      "script": {
        "type": "application/javascript",
        "exec": [
          "console.log('Executing this code prior to every HTTP request');"
        ]
      }
    }
  ],
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "Authorization",
        "value": "ApiKey {{api_key_variable}}",
        "type": "string"
      }
    ]
  },
  "protocolProfileBehavior": {
    "disableBodyPruning": true,
    "followRedirects": false
  },
  "item": [
    {
      "name": "Fetch Order Details",
      "request": {
        "method": "GET",
        "url": "https://api.example.com/orders/42",
        "headers": [
          {
            "key": "Authorization",
            "value": "Bearer <token>"
          }
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "https://api.example.com",
      "type": "string"
    }
  ]
}