{
    "mcpServers": {
        "home_assistant": {
            "command": "uv",
            "args": [
                "--directory",
                "/path/to/your/home-assistant-mcp",
                "run",
                "main.py"
            ],
            "env": {
                "HOME_ASSISTANT_TOKEN": "your_home_assistant_token_here"
            },
            "inheritEnv": true
        }
    }
}