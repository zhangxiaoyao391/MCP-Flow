{
    "mcpServers": {
        "llamacloud": {
            "command": "npx",
            "args": [
                "-y",
                "@llamaindex/mcp-server-llamacloud",
                "--index",
                "10k-SEC-Tesla",
                "--description",
                "10k SEC documents from 2023 for Tesla",
                "--index",
                "10k-SEC-Apple",
                "--description",
                "10k SEC documents from 2023 for Apple"
            ],
            "env": {
                "LLAMA_CLOUD_PROJECT_NAME": "<YOUR_PROJECT_NAME>",
                "LLAMA_CLOUD_API_KEY": "<YOUR_API_KEY>"
            }
        }
    }
}