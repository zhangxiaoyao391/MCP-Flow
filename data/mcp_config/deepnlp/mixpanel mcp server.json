{
    "mcpServers": {
        "Joomla Articles MCP": {
            "command": "{{PATH_TO_UV}}",
            "args": [
                "--directory",
                "{{PATH_TO_PROJECT}}",
                "run",
                "main.py"
            ],
            "env": {
                "JOOMLA_BASE_URL": "<your_joomla_website_url>",
                "BEARER_TOKEN": "<your_joomla_api_token>"
            }
        }
    }
}