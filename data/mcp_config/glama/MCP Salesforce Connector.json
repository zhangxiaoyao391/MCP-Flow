{
  "mcpServers": {
    "salesforce": {
      "command": "uvx",
      "args": [
        "--from",
        "mcp-salesforce-connector",
        "salesforce"
      ],
      "env": {
        "SALESFORCE_ACCESS_TOKEN": "SALESFORCE_ACCESS_TOKEN",
        "SALESFORCE_INSTANCE_URL": "SALESFORCE_INSTANCE_URL",
        "SALESFORCE_DOMAIN": "SALESFORCE_DOMAIN"
      }
    }
  }
}