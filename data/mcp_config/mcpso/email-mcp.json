{
  "mcpServers": {
    "email-mcp": {
      "command": "npx",
      "args": [
        "-y",
        "email-mcp"
      ],
      "env": {
        "EMAIL_HOST": "<your SMTP server>",
        "EMAIL_PORT": "<your SMTP port>",
        "EMAIL_ACCOUNT": "<your email account>",
        "EMAIL_PASSWORD": "<password or app password>"
      }
    }
  }
}