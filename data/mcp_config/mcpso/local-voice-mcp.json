{
  "mcpServers": {
    "local-voice-mcp": {
      "command": "npx",
      "args": [
        "-y",
        "@codecraftersllc/local-voice-mcp"
      ],
      "env": {
        "USE_MALE_VOICE": "false",
        "CHATTERBOX_EXAGGERATION": "0.5",
        "CHATTERBOX_CFG_WEIGHT": "1.2",
        "CHATTERBOX_MAX_CHARACTERS": "2000",
        "CHATTERBOX_PLAYBACK_VOLUME": "100"
      }
    }
  }
}