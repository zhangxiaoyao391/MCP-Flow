{
  "mcpServers": {
    "mcp-server-dingtalk": {
      "transport": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "mcp-server-dingtalk"
      ],
      "env": {
        "DINGTALK_BOT_CONFIGS": "[{\"name\": \"your-bot-name\", \"accessToken\": \"your-access-token\", \"signSecret\": \"your-sign-secret\"}]"
      }
    }
  }
}