    {
        "name": "mcp-firebird_backup-database",
        "description": "Creates a backup of the Firebird database",
        "parameters": {
            "type": "object",
            "properties": {
                "backupPath": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Path where the backup file will be saved"
                },
                "options": {
                    "type": "object",
                    "properties": {
                        "format": {
                            "type": "string",
                            "enum": [
                                "gbak",
                                "nbackup"
                            ],
                            "default": "gbak",
                            "description": "Backup format: gbak (full backup) or nbackup (incremental)"
                        },
                        "compress": {
                            "type": "boolean",
                            "default": false,
                            "description": "Whether to compress the backup"
                        },
                        "metadata_only": {
                            "type": "boolean",
                            "default": false,
                            "description": "Whether to backup only metadata (no data)"
                        },
                        "verbose": {
                            "type": "boolean",
                            "default": false,
                            "description": "Whether to show detailed progress"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "required": [
                "backupPath"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "mcp-firebird_restore-database",
        "description": "Restores a Firebird database from a backup",
        "parameters": {
            "type": "object",
            "properties": {
                "backupPath": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Path to the backup file"
                },
                "targetPath": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Path where the database will be restored"
                },
                "options": {
                    "type": "object",
                    "properties": {
                        "replace": {
                            "type": "boolean",
                            "default": false,
                            "description": "Whether to replace the target database if it exists"
                        },
                        "pageSize": {
                            "type": "integer",
                            "minimum": 1024,
                            "maximum": 16384,
                            "default": 4096,
                            "description": "Page size for the restored database"
                        },
                        "verbose": {
                            "type": "boolean",
                            "default": false,
                            "description": "Whether to show detailed progress"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "required": [
                "backupPath",
                "targetPath"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "mcp-firebird_validate-database",
        "description": "Validates the integrity of the Firebird database",
        "parameters": {
            "type": "object",
            "properties": {
                "options": {
                    "type": "object",
                    "properties": {
                        "checkData": {
                            "type": "boolean",
                            "default": true,
                            "description": "Whether to validate data integrity"
                        },
                        "checkIndexes": {
                            "type": "boolean",
                            "default": true,
                            "description": "Whether to validate indexes"
                        },
                        "fixErrors": {
                            "type": "boolean",
                            "default": false,
                            "description": "Whether to attempt to fix errors"
                        },
                        "verbose": {
                            "type": "boolean",
                            "default": false,
                            "description": "Whether to show detailed progress"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "mcp-firebird_execute-batch-queries",
        "description": "Executes multiple SQL queries in parallel for improved performance.",
        "parameters": {
            "type": "object",
            "properties": {
                "queries": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "sql": {
                                "type": "string",
                                "minLength": 1,
                                "description": "SQL query to execute"
                            },
                            "params": {
                                "type": "array",
                                "items": {
                                    "anyOf": [
                                        {
                                            "anyOf": [
                                                {
                                                    "type": [
                                                        "string",
                                                        "number"
                                                    ]
                                                },
                                                {
                                                    "type": "boolean"
                                                }
                                            ]
                                        },
                                        {
                                            "type": "null"
                                        }
                                    ]
                                },
                                "description": "Parameters for parameterized queries"
                            }
                        },
                        "required": [
                            "sql"
                        ],
                        "additionalProperties": false
                    },
                    "minItems": 1,
                    "maxItems": 20,
                    "description": "Array of query objects, each containing SQL and optional parameters"
                },
                "maxConcurrent": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 10,
                    "default": 5,
                    "description": "Maximum number of concurrent queries (default: 5)"
                }
            },
            "required": [
                "queries"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
