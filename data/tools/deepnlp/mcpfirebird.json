[
    {
        "name": "mcp-firebird_execute-query",
        "description": "Executes a SQL query in the Firebird database. Uses FIRST/ROWS for pagination.",
        "parameters": {
            "type": "object",
            "properties": {
                "sql": {
                    "type": "string",
                    "minLength": 1,
                    "description": "SQL query to execute (Firebird uses FIRST/ROWS for pagination instead of LIMIT)"
                },
                "params": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "anyOf": [
                                    {
                                        "type": [
                                            "string",
                                            "number"
                                        ]
                                    },
                                    {
                                        "type": "boolean"
                                    }
                                ]
                            },
                            {
                                "type": "null"
                            }
                        ]
                    },
                    "description": "Parameters for parameterized queries to prevent SQL injection"
                }
            },
            "required": [
                "sql"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
