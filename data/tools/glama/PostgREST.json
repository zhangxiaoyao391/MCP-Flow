[
    {
        "name": "todos_postgrestRequest",
        "description": "Performs HTTP request against the PostgREST API",
        "parameters": {
            "type": "object",
            "properties": {
                "method": {
                    "type": "string",
                    "enum": [
                        "GET",
                        "POST",
                        "PUT",
                        "PATCH",
                        "DELETE"
                    ]
                },
                "path": {
                    "type": "string"
                },
                "body": {
                    "type": "object",
                    "additionalProperties": {}
                }
            },
            "required": [
                "method",
                "path"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "todos_sqlToRest",
        "description": "Converts SQL query to a PostgREST API request (method, path)",
        "parameters": {
            "type": "object",
            "properties": {
                "sql": {
                    "type": "string"
                }
            },
            "required": [
                "sql"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    }
]