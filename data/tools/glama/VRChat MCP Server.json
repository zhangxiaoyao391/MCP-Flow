        "parameters": {
            "type": "object",
            "properties": {
                "userId": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Must be a valid user ID"
                },
                "messageType": {
                    "type": "string",
                    "enum": [
                        "message",
                        "response",
                        "request",
                        "requestResponse"
                    ],
                    "description": "The type of message to fetch"
                }
            },
            "required": [
                "userId",
                "messageType"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "vrchat-mcp_vrchat_request_invite",
        "description": "Request an invite from a user. IMPORTANT: Always obtain explicit permission from the user before sending an invite request. Note that invite requests cannot be sent to users in private instances. Returns the Notification of type requestInvite that was sent.",
        "parameters": {
            "type": "object",
            "properties": {
                "userId": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Must be a valid user ID"
                },
                "instanceId": {
                    "type": "string",
                    "description": "The instance ID to use when requesting an invite"
                },
                "messageSlot": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 11,
                    "description": "Slot number of the Request Message to use when request an invite"
                }
            },
            "required": [
                "userId",
                "instanceId",
                "messageSlot"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "vrchat-mcp_vrchat_get_invite_message",
        "description": "Returns a specific invite message. Admin Credentials are required to view messages of other users!\n\n    Message type refers to a different collection of messages:\n    - message = Message during a normal invite\n    - response = Message when replying to a message\n    - request = Message when requesting an invite\n    - requestResponse = Message when replying to a request for invite\n    ",
        "parameters": {
            "type": "object",
            "properties": {
                "userId": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Must be a valid user ID."
                },
                "messageType": {
                    "type": "string",
                    "enum": [
                        "message",
                        "response",
                        "request",
                        "requestResponse"
                    ],
                    "default": "message",
                    "description": "The type of message to fetch. Must be a valid InviteMessageType."
                },
                "slot": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 11,
                    "description": "Slot number of the message to fetch."
                }
            },
            "required": [
                "userId",
                "slot"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "vrchat-mcp_vrchat_get_notifications",
        "description": "Retrieve a list of VRChat notifications.",
        "parameters": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "description": "Only send notifications of this type. Use \"all\" for all types. This parameter no longer does anything and is deprecated."
                },
                "sent": {
                    "type": "boolean",
                    "description": "Return notifications sent by the user. Must be false or omitted."
                },
                "hidden": {
                    "type": "boolean",
                    "description": "Whether to return hidden or non-hidden notifications. True only allowed on type \"friendRequest\"."
                },
                "after": {
                    "type": "string",
                    "description": "Only return notifications sent after this Date. Ignored if type is \"friendRequest\"."
                },
                "n": {
                    "type": "number",
                    "minimum": 1,
                    "maximum": 100,
                    "description": "The number of objects to return. Default: 60, Max: 100"
                },
                "offset": {
                    "type": "number",
                    "minimum": 0,
                    "description": "A zero-based offset from the default object sorting from where to start."
                }
            },
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    }
