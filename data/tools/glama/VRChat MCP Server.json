    },
    {
        "name": "vrchat-mcp_vrchat_create_instance",
        "description": "Create a new instance of a world.",
        "parameters": {
            "type": "object",
            "properties": {
                "worldId": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "public",
                        "hidden",
                        "friends",
                        "private",
                        "group"
                    ]
                },
                "region": {
                    "type": "string",
                    "enum": [
                        "us",
                        "use",
                        "eu",
                        "jp",
                        "unknown"
                    ],
                    "default": "us"
                },
                "ownerId": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "roleIds": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "groupAccessType": {
                    "type": "string",
                    "enum": [
                        "members",
                        "plus",
                        "public"
                    ]
                },
                "queueEnabled": {
                    "type": "boolean"
                },
                "closedAt": {
                    "type": "string"
                },
                "canRequestInvite": {
                    "type": "boolean"
                },
                "hardClose": {
                    "type": "boolean"
                },
                "inviteOnly": {
                    "type": "boolean"
                }
            },
            "required": [
                "worldId",
                "type"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
