    {
        "name": "vrchat-mcp_vrchat_search_worlds",
        "description": "Search and list worlds by query filters.",
        "parameters": {
            "type": "object",
            "properties": {
                "featured": {
                    "type": "boolean",
                    "description": "Return featured worlds only"
                },
                "sort": {
                    "type": "string",
                    "enum": [
                        "popularity",
                        "heat",
                        "trust",
                        "shuffle",
                        "random",
                        "favorites",
                        "reportScore",
                        "reportCount",
                        "publicationDate",
                        "labsPublicationDate",
                        "created",
                        "_created_at",
                        "updated",
                        "_updated_at",
                        "order",
                        "relevance",
                        "magic",
                        "name"
                    ],
                    "description": "Sort worlds by a specific criteria"
                },
                "user": {
                    "type": "string",
                    "enum": [
                        "me"
                    ],
                    "description": "Filter by the specified user, currently only supports \"me\" to see your own worlds"
                },
                "userId": {
                    "type": "string",
                    "description": "Filter worlds by a specific VRChat user ID"
                },
                "n": {
                    "type": "number",
                    "minimum": 1,
                    "maximum": 100,
                    "description": "Number of worlds to return, from 1 to 100"
                },
                "order": {
                    "type": "string",
                    "enum": [
                        "ascending",
                        "descending"
                    ],
                    "description": "Sort results in ascending or descending order"
                },
                "offset": {
                    "type": "number",
                    "minimum": 0,
                    "description": "Offset for pagination, minimum 0"
                },
                "search": {
                    "type": "string",
                    "description": "Search worlds by name or other text fields"
                },
                "tag": {
                    "type": "string",
                    "description": "Filter worlds by a specific tag"
                },
                "notag": {
                    "type": "string",
                    "description": "Exclude worlds with a specific tag"
                }
            },
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
