    {
        "name": "vrchat-mcp_vrchat_list_favorite_groups",
        "description": "Returns a list of favorite groups owned by a user.",
        "parameters": {
            "type": "object",
            "properties": {
                "n": {
                    "type": "number",
                    "minimum": 1,
                    "maximum": 100,
                    "default": 60,
                    "description": "Number of favorite groups to return (1-100). Default is 60."
                },
                "offset": {
                    "type": "number",
                    "minimum": 0,
                    "description": "Skip this many favorite groups before beginning to return results."
                },
                "ownerId": {
                    "type": "string",
                    "description": "Filter by owner ID. If not provided, returns current user's favorite groups."
                }
            },
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "vrchat-mcp_vrchat_list_favorites",
        "description": "Returns a list of favorites.",
        "parameters": {
            "type": "object",
            "properties": {
                "n": {
                    "type": "number",
                    "minimum": 1,
                    "maximum": 100,
                    "default": 60,
                    "description": "Number of favorites to return (1-100). Default is 60."
                },
                "offset": {
                    "type": "number",
                    "minimum": 0,
                    "description": "Skip this many favorites before beginning to return results."
                },
                "type": {
                    "type": "string",
                    "description": "Filter by favorite type (\"world\", \"friend\", or \"avatar\")."
                },
                "tag": {
                    "type": "string",
                    "description": "Filter by tag (e.g., \"group_0\", \"group_1\")."
                }
            },
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "vrchat-mcp_vrchat_add_favorite",
        "description": "Add a new favorite.",
        "parameters": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "world",
                        "friend",
                        "avatar"
                    ],
                    "description": "FavoriteType. Default: friend, Allowed: world | friend | avatar"
                },
                "favoriteId": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Must be either AvatarID, WorldID or UserID"
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minLength": 1
                    },
                    "minItems": 1,
                    "description": "Tags indicate which group this favorite belongs to. Adding multiple groups makes it show up in all. Removing it from one in that case removes it from all."
                }
            },
            "required": [
                "type",
                "favoriteId",
                "tags"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "vrchat-mcp_vrchat_list_invite_messages",
