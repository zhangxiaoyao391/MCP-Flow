    {
        "name": "MCP Neovim Server_vim_search",
        "description": "Search within current buffer with regex support and options",
        "parameters": {
            "type": "object",
            "properties": {
                "pattern": {
                    "type": "string",
                    "description": "Search pattern (supports regex)"
                },
                "ignoreCase": {
                    "type": "boolean",
                    "description": "Whether to ignore case in search (default: false)"
                },
                "wholeWord": {
                    "type": "boolean",
                    "description": "Whether to match whole words only (default: false)"
                }
            },
            "required": [
                "pattern"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "MCP Neovim Server_vim_search_replace",
        "description": "Find and replace with global, case-insensitive, and confirm options",
        "parameters": {
            "type": "object",
            "properties": {
                "pattern": {
                    "type": "string",
                    "description": "Search pattern (supports regex)"
                },
                "replacement": {
                    "type": "string",
                    "description": "Replacement text"
                },
                "global": {
                    "type": "boolean",
                    "description": "Replace all occurrences in each line (default: false)"
                },
                "ignoreCase": {
                    "type": "boolean",
                    "description": "Whether to ignore case in search (default: false)"
                },
                "confirm": {
                    "type": "boolean",
                    "description": "Whether to confirm each replacement (default: false)"
                }
            },
            "required": [
                "pattern",
                "replacement"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
