        "parameters": {
            "type": "object",
            "properties": {
                "command": {
                    "type": "string",
                    "description": "Vim command to execute (use ! prefix for shell commands if enabled)"
                }
            },
            "required": [
                "command"
            ],
            "additionalProperties": false,
