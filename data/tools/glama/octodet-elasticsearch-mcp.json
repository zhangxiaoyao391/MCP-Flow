    {
        "name": "elasticsearch_search",
        "description": "Perform an Elasticsearch search with the provided query DSL, highlighting, and script fields",
        "parameters": {
            "type": "object",
            "properties": {
                "index": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Name of the Elasticsearch index to search"
                },
                "queryBody": {
                    "type": "object",
                    "additionalProperties": {},
                    "description": "Complete Elasticsearch query DSL object (can include query, size, from, sort, etc.)"
                },
                "scriptFields": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "script": {
                                "type": "object",
                                "properties": {
                                    "source": {
                                        "type": "string",
                                        "minLength": 1,
                                        "description": "Painless script source code"
                                    },
                                    "params": {
                                        "type": "object",
                                        "additionalProperties": {},
                                        "description": "Optional parameters for the script"
                                    },
                                    "lang": {
                                        "type": "string",
                                        "default": "painless",
                                        "description": "Script language (defaults to painless)"
                                    }
                                },
                                "required": [
                                    "source"
                                ],
                                "additionalProperties": false
                            }
                        },
                        "required": [
                            "script"
                        ],
                        "additionalProperties": false
                    },
                    "description": "Script fields to evaluate and include in the response"
                }
            },
            "required": [
                "index",
                "queryBody"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
