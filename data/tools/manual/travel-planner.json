            "type": "object",
            "properties": {
                "location": {
                    "type": "string",
                    "description": "Location to search"
                },
                "checkIn": {
                    "type": "string",
                    "description": "Check-in date (YYYY-MM-DD)"
                },
                "checkOut": {
                    "type": "string",
