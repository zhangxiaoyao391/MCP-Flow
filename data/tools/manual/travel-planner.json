        "parameters": {
            "type": "object",
            "properties": {
                "itineraryId": {
                    "type": "string",
                    "description": "ID of the itinerary to optimize"
                },
                "optimizationCriteria": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Criteria for optimization (time, cost, etc.)"
                }
            },
            "required": [
                "itineraryId",
                "optimizationCriteria"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
