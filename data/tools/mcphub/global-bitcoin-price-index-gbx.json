[
    {
        "name": "ticker_per_symbol",
        "description": "Returns ticker data for specified market symbol.",
        "parameters": {
            "properties": {
                "market": {
                    "description": "Possible values: global, local",
                    "title": "Market",
                    "type": "string"
                },
                "symbol": {
                    "description": "BTC, where is valid ISO currency (ex. BTCUSD, BTCEUR)",
                    "title": "Symbol",
                    "type": "string"
                }
            },
            "required": [
                "market",
                "symbol"
            ],
            "type": "object"
        }
    },
    {
        "name": "ticker_data",
