    {
        "name": "linear_createIssue",
        "description": "Create a new issue in Linear",
        "parameters": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string",
                    "description": "Title of the issue"
                },
                "description": {
                    "type": "string",
