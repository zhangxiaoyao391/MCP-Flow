[
    {
        "name": "farcaster_get-user-casts",
        "description": "Get casts from a specific Farcaster user by FID",
        "parameters": {
            "type": "object",
            "properties": {
                "fid": {
                    "type": "number",
                    "description": "Farcaster user ID (FID)"
                },
                "limit": {
                    "type": "number",
                    "description": "Maximum number of casts to return (default: 10)"
                }
            },
            "required": [
                "fid"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "farcaster_post-cast",
        "description": "Post a new cast to Farcaster",
        "parameters": {
            "type": "object",
            "properties": {
                "cast": {
                    "type": "string",
                    "description": "The text content of the cast to be posted"
                },
                "embeds": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Optional array of URLs to embed in the cast"
                }
            },
            "required": [
                "cast"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "farcaster_get-username-casts",
        "description": "Get casts from a specific Farcaster username",
        "parameters": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string",
                    "description": "Farcaster username"
                },
                "limit": {
                    "type": "number",
                    "description": "Maximum number of casts to return (default: 10)"
                }
            },
            "required": [
                "username"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    }
]