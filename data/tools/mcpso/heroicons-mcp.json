[
    {
        "name": "heroicons_search_icons",
        "description": "Search for icons from heroicons by name or category",
        "parameters": {
            "type": "object",
            "properties": {
                "query": {
                    "type": "string",
                    "description": "Search term for icon name or category"
                },
                "style": {
                    "type": "string",
                    "enum": [
                        "solid",
                        "outline"
                    ],
                    "description": "Icon style: solid or outline"
                },
                "category": {
                    "type": "string",
                    "description": "Category to filter by (optional)"
                },
                "limit": {
                    "type": "number",
                    "minimum": 1,
                    "maximum": 100,
                    "default": 20,
                    "description": "Max results to return"
                }
            },
            "required": [
                "query"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "heroicons_get_icon_usage_examples",
        "description": "Get usage examples for an icon",
        "parameters": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Icon component name, e.g. BeakerIcon"
                },
                "style": {
                    "type": "string",
                    "enum": [
                        "solid",
                        "outline"
                    ],
                    "description": "Icon style: solid or outline"
                }
            },
            "required": [
                "name",
                "style"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "heroicons_list_all_icons",
        "description": "List all icons from the heroicons library, optionally filtered by style",
        "parameters": {
            "type": "object",
            "properties": {
                "style": {
                    "type": "string",
                    "enum": [
                        "solid",
                        "outline"
                    ],
                    "description": "Icon style: solid or outline (optional)"
                }
            },
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    }
]