            "properties": {
                "filePath": {
                    "type": "string",
                    "minLength": 1
                },
                "metadata": {
                    "type": "object",
                    "properties": {
                        "tags": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "description": {
                            "type": "string"
                        },
                        "people": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "location": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false
                },
                "overwrite": {
                    "type": "boolean",
                    "default": true
                }
            },
            "required": [
                "filePath",
                "metadata"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    }
