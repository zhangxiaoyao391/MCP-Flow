    {
        "name": "npm-helper_check_updates",
        "description": "Scan package.json for outdated dependencies",
        "parameters": {
            "type": "object",
            "properties": {
                "packagePath": {
                    "type": "string"
                },
                "filter": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "reject": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "target": {
                    "type": "string",
                    "enum": [
                        "latest",
                        "newest",
                        "greatest",
                        "minor",
                        "patch",
                        "semver"
                    ]
                },
                "peer": {
                    "type": "boolean"
                },
                "minimal": {
                    "type": "boolean"
                },
                "packageManager": {
                    "type": "string",
                    "enum": [
                        "npm",
                        "yarn",
                        "pnpm",
                        "deno",
                        "bun",
                        "staticRegistry"
                    ]
                }
            }
        }
    },
