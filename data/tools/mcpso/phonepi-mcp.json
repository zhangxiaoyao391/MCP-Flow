    {
        "name": "phonepi-mcp_share_snippet",
        "description": "Share a snippet via messaging apps",
        "parameters": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "number",
                    "description": "Snippet ID to share"
                },
                "method": {
                    "type": "string",
                    "enum": [
                        "default",
                        "sms",
                        "whatsapp",
                        "clipboard"
                    ],
                    "description": "Sharing method to use",
                    "default": "default"
                },
                "recipient": {
                    "type": "string",
