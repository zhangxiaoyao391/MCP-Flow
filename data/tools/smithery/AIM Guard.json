[
    {
        "name": "aim-mcp_ai-safety-guard",
        "description": "AI Safety Guard - MCP Caution Instructions for AI Agents",
        "parameters": {
            "type": "object",
            "properties": {
                "mcp_type": {
                    "type": "string",
                    "enum": [
                        "email",
                        "slack",
                        "database",
                        "file",
                        "web",
                        "general"
                    ],
                    "default": "general",
                    "description": "Type of MCP the AI Agent is about to call"
                },
                "operation_type": {
                    "type": "string",
                    "enum": [
                        "read",
                        "write",
                        "execute",
                        "delete",
                        "send",
                        "query"
                    ],
                    "default": "read",
                    "description": "Type of operation being requested"
                },
                "sensitivity_level": {
                    "type": "string",
                    "enum": [
                        "public",
                        "internal",
                        "confidential",
                        "restricted"
                    ],
                    "default": "internal",
                    "description": "Sensitivity level of the data/operation"
                }
            },
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "aim-mcp_aim-text-guard",
        "description": "AIM-Intelligence Text Guard Tool",
        "parameters": {
            "type": "object",
            "properties": {
                "text": {
                    "type": "string",
                    "description": "Text to analyze for harmful content"
                }
            },
            "required": [
                "text"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "aim-mcp_aim-security-prompt-tool",
        "description": "Security Prompt Enhancement Tool",
        "parameters": {
            "type": "object",
            "properties": {
                "user_prompt": {
                    "type": "string",
                    "description": "The original user prompt to enhance with security instructions"
                },
                "security_level": {
                    "type": "string",
                    "enum": [
                        "basic",
                        "standard",
                        "strict"
                    ],
                    "description": "Security enhancement level",
                    "default": "standard"
                }
            },
            "required": [
                "user_prompt"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    }
]