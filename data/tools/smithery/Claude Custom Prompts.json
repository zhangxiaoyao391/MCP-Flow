                },
                "section_name": {
                    "type": "string",
                    "description": "Name of the section to modify (valid values: 'title', 'description', 'System Message', 'User Message Template', or any custom section)"
                },
                "new_content": {
                    "type": "string",
                    "description": "New content for the specified section"
                },
                "fullServerRestart": {
                    "type": "boolean",
                    "description": "Whether to perform a full server restart after modifying the prompt section. Defaults to false (hot-reload only)."
                }
            },
            "required": [
                "id",
                "section_name",
                "new_content"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "claude-prompts-mcp_reload_prompts",
