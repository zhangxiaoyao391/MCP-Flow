[
    {
        "name": "google-search-mcp_search",
        "description": "Search the web using Google with enhanced anonymization and anti-detection features. Supports advanced filtering options.",
        "parameters": {
            "type": "object",
            "properties": {
                "query": {
                    "type": "string",
                    "description": "Search query to execute"
                },
                "limit": {
                    "type": "number",
                    "minimum": 1,
                    "maximum": 10,
                    "default": 5,
                    "description": "Maximum number of results to return (1-10, default: 5)"
                },
                "language": {
                    "type": "string",
                    "description": "Language code for results (e.g., 'en', 'es', 'fr', 'de', 'ja')"
                },
                "region": {
                    "type": "string",
                    "description": "Region code for localized results (e.g., 'us', 'uk', 'ca', 'au')"
                },
                "safeSearch": {
                    "type": "string",
                    "enum": [
                        "off",
                        "moderate",
                        "strict"
                    ],
                    "description": "Safe search filter level"
                },
                "timeRange": {
                    "type": "string",
                    "enum": [
                        "hour",
                        "day",
                        "week",
                        "month",
                        "year"
                    ],
                    "description": "Time range filter for recent results"
                }
            },
            "required": [
                "query"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    }
]