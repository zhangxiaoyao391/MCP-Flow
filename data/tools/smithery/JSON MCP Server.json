        "parameters": {
            "type": "object",
            "properties": {
                "path": {
                    "type": "string"
                },
                "numObjects": {
                    "type": "integer",
                    "exclusiveMinimum": 0
                }
            },
            "required": [
                "path",
                "numObjects"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "json-mcp_merge",
        "description": "Merge JSON files into a one JSON file",
        "parameters": {
            "type": "object",
            "properties": {
                "path": {
                    "type": "string"
                }
            },
            "required": [
                "path"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    }
]