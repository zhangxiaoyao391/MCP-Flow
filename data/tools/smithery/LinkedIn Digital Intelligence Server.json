                                "and": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "or": {
                                                "type": "object",
                                                "additionalProperties": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string"
                                                    }
                                                },
                                                "description": "Object with facet URNs as keys and arrays of facet values as values"
