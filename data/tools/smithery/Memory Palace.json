                },
                "roomIds": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Array of room IDs in the order to visit them"
                },
                "difficulty": {
                    "type": "string",
                    "enum": [
                        "beginner",
                        "intermediate",
                        "advanced"
                    ],
                    "description": "Difficulty level"
                }
            },
            "required": [
                "name",
                "palaceId",
                "roomIds"
            ]
        }
    },
