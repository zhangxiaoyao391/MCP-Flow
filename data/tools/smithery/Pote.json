[
    {
        "name": "pote-mcp_get-all-breeds",
        "description": "Get a list of all supported dog breeds and their IDs",
        "parameters": {
            "type": "object",
            "properties": {
                "includeImage": {
                    "type": "boolean",
                    "description": "Whether to include cover images in the response"
                }
            },
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "pote-mcp_get-breed-info",
        "description": "Get detailed information about a specific dog breed by ID",
        "parameters": {
            "type": "object",
            "properties": {
                "breedId": {
                    "type": "string",
                    "description": "The ID of the dog breed"
                }
            },
            "required": [
                "breedId"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "pote-mcp_get-breed-posts",
        "description": "Get a list of available dog posts/ads for a specific breed.",
        "parameters": {
            "type": "object",
            "properties": {
                "breedId": {
                    "type": "string",
                    "description": "The ID of the dog breed"
                },
                "limit": {
                    "type": "number",
                    "minimum": 1,
                    "maximum": 100,
                    "default": 10,
                    "description": "Maximum number of posts to return"
                },
                "offset": {
                    "type": "number",
                    "minimum": 0,
                    "default": 0,
                    "description": "Number of posts to skip"
                }
            },
            "required": [
                "breedId"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "pote-mcp_get-post-by-id",
        "description": "Get more detailed information about a specific post by providing the ID of the post in the database. The ID should be found in the list of posts returned by the get-breed-posts tool. It's a mongodb id.",
        "parameters": {
            "type": "object",
            "properties": {
                "postId": {
                    "type": "string",
                    "description": "The ID of the post"
                }
            },
            "required": [
                "postId"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    }
]