    {
        "name": "smithery-mcp-server_getDirectoryTree",
        "description": "Get a hierarchical representation of a directory",
        "parameters": {
            "type": "object",
            "properties": {
                "dirPath": {
                    "type": "string",
                    "description": "Path to the directory"
                },
                "maxDepth": {
                    "type": "number",
                    "description": "Maximum depth to traverse (default: unlimited)"
                },
                "includeFiles": {
                    "type": "boolean",
                    "description": "Include files in the tree (default: true)"
                },
                "includeDirs": {
                    "type": "boolean",
                    "description": "Include directories in the tree (default: true)"
                },
                "includeSize": {
                    "type": "boolean",
                    "description": "Include file sizes (default: false)"
                },
                "extensions": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Filter files by extensions (default: all files)"
                },
                "exclude": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Paths to exclude from the tree (default: none)"
                }
            },
            "required": [
                "dirPath"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "smithery-mcp-server_grep",
        "description": "Search for patterns in files (grep)",
        "parameters": {
            "type": "object",
            "properties": {
                "pattern": {
                    "type": "string",
                    "description": "Pattern to search for (string or regex)"
                },
                "filePaths": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    ],
                    "description": "File path(s) to search in"
                },
                "useRegex": {
                    "type": "boolean",
                    "description": "Treat pattern as regex (default: true)"
                },
                "caseSensitive": {
                    "type": "boolean",
                    "description": "Case sensitive search (default: false)"
                },
                "beforeContext": {
                    "type": "number",
                    "description": "Number of lines of context before match (default: 0)"
                },
                "afterContext": {
                    "type": "number",
                    "description": "Number of lines of context after match (default: 0)"
                },
                "maxMatches": {
                    "type": "number",
                    "description": "Maximum number of matches to return (default: unlimited)"
                },
                "encoding": {
                    "type": "string",
                    "description": "File encoding (default: utf8)"
                }
            },
            "required": [
                "pattern",
                "filePaths"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
    {
        "name": "smithery-mcp-server_combinationTask",
        "description": "Run a sequence of operations with a common working directory",
        "parameters": {
            "type": "object",
            "properties": {
                "workingDir": {
                    "type": "string",
                    "description": "Working directory for all tasks"
                },
                "tasks": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string",
                                "description": "Task type"
                            },
                            "params": {
                                "type": "object",
                                "additionalProperties": {},
                                "description": "Task parameters"
                            }
                        },
                        "required": [
                            "type",
                            "params"
                        ],
                        "additionalProperties": false
                    },
                    "description": "List of tasks to execute"
                },
                "stopOnError": {
                    "type": "boolean",
                    "description": "Stop execution on first error (default: true)"
                }
            },
            "required": [
                "workingDir",
                "tasks"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    }
