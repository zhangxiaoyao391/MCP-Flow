    {
        "name": "wapulse-whatsapp-mcp_send_whatsapp_message",
        "description": "Send a WhatsApp message to a specific phone number or group using WaPulse API",
        "parameters": {
            "type": "object",
            "properties": {
                "to": {
                    "type": "string",
                    "pattern": "^\\d{1,4}\\d{6,15}$"
                },
                "message": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 4096
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "user",
                        "group"
                    ],
                    "default": "user"
                },
                "customToken": {
                    "type": "string"
                },
                "customInstanceID": {
                    "type": "string"
                }
            },
            "required": [
                "to",
                "message"
            ],
            "additionalProperties": false,
            "$schema": "http://json-schema.org/draft-07/schema#"
        }
    },
