{
  "mcpServers": {
    "mochow": {
      "command": "/PATH/TO/uv",
      "args": [
        "--directory",
        "/path/to/mochow-mcp-server-python/src/mochow_mcp_server",
        "run",
        "server.py",
        "--endpoint",
        "http://127.0.0.1:8287",
        "--api-key",
        "mochow"
      ]
    }
  }
}