{
  "mcpServers": {
    "growthbook": {
      "command": "npx",
      "args": [
        "-y",
        "@growthbook/mcp"
      ],
      "env": {
        "GB_API_KEY": "YOUR_API_KEY",
        "GB_API_URL": "YOUR_API_URL",
        "GB_APP_ORIGIN": "YOUR_APP_ORIGIN",
        "GB_EMAIL": "YOUR_EMAIL"
      }
    }
  }
}