{
  "mcpServers": {
    "jira-mcp-server": {
      "command": "node",
      "args": [
        "path-to-repo/jira-mcp-server/build/index.js"
      ],
      "env": {
        "JIRA_PROJECT_URL": "https://project-url.atlassian.net/rest/api/3",
        "JIRA_USER_EMAIL": "your_email@example.com",
        "JIRA_API_KEY": "yourAPIkey",
        "JIRA_PROJECT_KEY": "ABC"
      }
    }
  }
}