{
  "mcpServers": {
    "kuzu": {
      "command": "docker",
      "args": [
        "run",
        "-v",
        "{Path to the directory containing Kuzu database file}:/database",
        "-e",
        "KUZU_DB_FILE={Kuzu database file name}",
        "--rm",
        "-i",
        "kuzudb/mcp-server"
      ]
    }
  }
}