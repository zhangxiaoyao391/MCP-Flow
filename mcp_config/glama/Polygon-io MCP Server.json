{
  "mcpServers": {
    "polygon": {
      "command": "<path_to_your_uvx_install>/uvx",
      "args": [
        "--from",
        "git+https://github.com/polygon-io/mcp_polygon@v0.4.0",
        "mcp_polygon"
      ],
      "env": {
        "POLYGON_API_KEY": "<your_api_key_here>",
        "HOME": "<your_home_directory>"
      }
    }
  }
}