{
  "mcpServers": {
    "redis": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "--name",
        "redis-mcp-server",
        "-i",
        "-e",
        "REDIS_HOST=<redis_hostname>",
        "-e",
        "REDIS_PORT=<redis_port>",
        "-e",
        "REDIS_USERNAME=<redis_username>",
        "-e",
        "REDIS_PWD=<redis_password>",
        "mcp-redis"
      ]
    }
  }
}