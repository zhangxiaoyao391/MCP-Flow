{
  "mcpServers": {
    "vectorize": {
      "command": "npx",
      "args": [
        "-y",
        "@vectorize-io/vectorize-mcp-server@latest"
      ],
      "env": {
        "VECTORIZE_ORG_ID": "your-org-id",
        "VECTORIZE_TOKEN": "your-token",
        "VECTORIZE_PIPELINE_ID": "your-pipeline-id"
      }
    }
  }
}