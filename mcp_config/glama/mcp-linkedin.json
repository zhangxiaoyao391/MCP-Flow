{
  "mcpServers": {
    "linkedin": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/adhikasp/mcp-linkedin",
        "mcp-linkedin"
      ],
      "env": {
        "LINKEDIN_EMAIL": "your_linkedin_email",
        "LINKEDIN_PASSWORD": "your_linkedin_password"
      }
    }
  }
}