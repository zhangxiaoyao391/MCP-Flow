{
    "mcpServers": {
        "mcp-think": {
            "command": "npx",
            "args": [
                "-y",
                "@smithery/cli@latest",
                "run",
                "@iamwavecut/mcp-think",
                "--key",
                "your key",
                "--profile",
                "your profile"
            ]
        },
        "mcp": {
            "command": "npx",
            "args": [
                "-y",
                "@smithery/cli@latest",
                "run",
                "@magicuidesign/mcp",
                "--key",
                "your key",
                "--profile",
                "your profile"
            ]
        },
        "collaborative-reasoning": {
            "command": "npx",
            "args": [
                "-y",
                "@smithery/cli@latest",
                "run",
                "@waldzellai/collaborative-reasoning",
                "--key",
                "your key",
                "--profile",
                "your profile"
            ]
        },
        "excel-mcp-server": {
            "command": "uvx",
            "args": [
                "excel-mcp-server",
                "stdio"
            ],
            "mcp_list_name": "Excel MCP Server",
            "mcp_list_description": "Manipulate Excel files seamlessly without requiring Microsoft Excel installed. Create, read, modify workbooks, apply formatting, generate charts, and manage worksheets through AI agents. Supports both local and remote usage with stdio and SSE transport protocols."
        }
    }
}